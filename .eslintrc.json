{
  "globals": {
    "app": false
  },
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6":     true,
    "browser": true,
    "node":    true,
    "mocha":   true
  },   
  "extends": [
    "eslint:recommended", 
    "plugin:react/recommended"
  ],    
  "rules": {
    "react/prop-types": 0,
    "react/react-in-jsx-scope": 0
  }
}
